{
    "version": "2.0.0",


    "tasks": [
        {
            "label": "Build Release",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/Release"
            },
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceRoot}/build/",
                "-j 16",
                "--config=Release"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/Debug"
            },
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceRoot}/build/",
                "-j 16",
                "--config=Debug"
            ],
            "problemMatcher": []
        },
    ]
}
